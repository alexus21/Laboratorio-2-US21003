<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.vehicles.EditVehicleInformationActivity">

    <TextView
        android:id="@+id/textViewEditVehicleTopMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="Editar información de un vehículo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextEditPlateNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Número de placa"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditVehicleTopMessage"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextEditBrandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Nombre de la marca: "
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditPlateNumber"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextEditFuelType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Tipo de combustible: "
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditBrandName"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextEditColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Color: "
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditFuelType"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextEditYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Año: "
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditColor"
        tools:layout_editor_absoluteX="94dp" />

    <EditText
        android:id="@+id/editTextEditTotalPassengers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Cantidad de pasajeros: "
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditYear"
        tools:layout_editor_absoluteX="91dp" />

    <Button
        android:id="@+id/buttonRegisterEditVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Actualizar información del vehículo"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditTotalPassengers"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonCancellEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancelar"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegisterEditVehicle"
        tools:layout_editor_absoluteX="151dp" />

</androidx.constraintlayout.widget.ConstraintLayout>